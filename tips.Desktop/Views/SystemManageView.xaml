<UserControl x:Class="Tips.Desktop.Views.SystemManageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             xmlns:ctrls="clr-namespace:Tips.Desktop.Views.Controls"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StackPanel>
            <ctrls:LinkButton 
                Content="Add User"
                Command="{Binding  }" />
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.IsSharedSizeScope="True">
            <ctrls:TextBoxWithTag 
                Tag="Id:"
                Text="{Binding Id}"
                MinWidth="180"/>
            <ctrls:TextBoxWithTag 
                Tag="Password:"
                Text="{Binding Password}"
                MinWidth="180"/>
            <ctrls:TextBoxWithTag 
                Tag="Name:"
                Text="{Binding Name}"
                MinWidth="180"/>
            <CheckBox Content="IsAdmin" />

            <ctrls:LinkButton Command="{Binding}" Content="Add User" />
        </StackPanel>
    </Grid>
</UserControl>
