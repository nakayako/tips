@{
  Layout = "Master.cshtml";
}


@section css{
<link href="/css/navbar-fixed-top.css" rel="stylesheet">
<style type="text/css">
<!--
.panel-footer {padding: 1px 15px}
.panel-footer blockquote{margin: 0px; padding: 0px;}
-->
    
.btn-user-delete {
    position: absolute;
    top: 0;
    right: 0;
    z-index: 10;
    display: block;
    padding: 5px 8px;
    font-size: 12px;
    color: #767676;
    cursor: pointer;
    background-color: #fff;
    border: 1px solid #e1e1e8;
    border-radius: 0 4px 0 4px;
}
</style>
}


<!--header-->
@Html.Partial("MenuBar", Model)

<div class="container">
    <div class="page-header">
        <h1>System Manage</h1>
    </div>

    <div class="row">
      <div class="col-md-2">
        <ul>
          <li><a href="~/systemmanage/user">Users</a></li>
          <li><a href="~/systemmanage/xxxx">XXXX</a></li>
        </ul>
      </div>
      <div class="col-md-10">
        @RenderBody()
      </div>
    </div>
</div>


@section js{
  @RenderSection("sysjs", false)

    <script type="text/javascript">
        $(function () {
            $('.btn-user-delete').click(function (e) { confirmDeleteUser($(this)); });
        });

        function confirmDeleteUser(button) {
            if (window.confirm("Are you sure you want to delete this user ?")) {
                deleteUser(button.val(), '@Url.Content("~/api/users/")', function () {
                    location.reload();
                    window.confirm('User has been successfully deleted.');
                })
            }
        }

        function deleteUser(id, url, callback) {

            var jsonData = {
                userid: id
            };
            var json = JSON.stringify(jsonData);

            $.ajax({
                type: 'delete',
                url: url,
                dataType: 'JSON',
                scriptCharset: 'utf-8',
                data : json,
                success: callback,
                error: function (data) {
                    // Error
                    alert("error");
                    alert(JSON.stringify(data));
                }
            });
        }
    </script>
}
