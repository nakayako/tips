@{
  Layout = "UserMaster.cshtml";
}

<div class="page-header">
    <h2>@Model.Name</h2>
</div>

<a class="btn btn-default pull-right" href="~/user/@Model.Id/edit" >Edit</a>

<div class="row">
  <img src="@Model.IconFile" class="img-rounded img-responsive" width="128" />
</div>

<div class="form-group">
  <label for="userId">UserId</label>
  <input id="userId" type="text" class="form-control" value="@Model.Id" disabled></input>
</div>

<div class="form-group">
	<label for="name">Name</label>
	<input id="name" type="text" class="form-control" value="@Model.Name" disabled></input>
</div>

<div class="form-group">
	<label for="password">Password</label>
	<input id="password" type="password" class="form-control" value="@Model.Password" disabled></input>
</div>

<div class="form-group">
	<label for="isAdmin">IsAdmin</label>
  <div class="checkbox">
    <label>
      <input id="isAdmin" type="checkbox" disabled> IsAdmin
    </label>
  </div>
</div>
