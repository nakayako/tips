<UserControl x:Class="Tips.Desktop.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             xmlns:ctrls="clr-namespace:Tips.Desktop.Views.Controls"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:b="clr-namespace:Tips.Desktop.Views.Behaviors"
             prism:ViewModelLocator.AutoWireViewModel="True"
             MaxWidth="240"
             b:FirstInputFocus.IsEnable="True">
    <StackPanel VerticalAlignment="Center" 
                Grid.IsSharedSizeScope="True">

        <ctrls:TextBoxWithTag Grid.Row="0" Margin="6" x:Name="id"
                              Tag="Id:"
                              Text="{Binding Id,UpdateSourceTrigger=PropertyChanged}" />

        <ctrls:TextBoxWithTag Grid.Row="1" Margin="6"
                              Tag="Password:"
                              Text="{Binding Password,UpdateSourceTrigger=PropertyChanged}" />
        
        <ctrls:LinkButton Grid.Row="2" HorizontalAlignment="Right" Margin="6"
                Content="Login" IsDefault="True"
                Command="{Binding LoginCommand}" />

    </StackPanel>
</UserControl>
